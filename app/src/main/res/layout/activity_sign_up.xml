<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="#AAC76F"
    android:orientation="vertical">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:elevation="12dp"
                />



                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up !"
                android:fontFamily="@font/homians_font_eb"
                android:textSize="36dp"
                android:letterSpacing="0.02"
                android:textColor="#000000"/>
        </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="@font/homians_font"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:alpha="0.8"
                        android:lineSpacingExtra="-7sp"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:padding="12dp"
                        android:textSize="16dp"
                        android:hint="Himanshu"
                        android:lineSpacingExtra="-8sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:fontFamily="@font/homians_font"
                        android:layout_marginTop="9dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/homians_font"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:alpha="0.8"
                        android:lineSpacingExtra="-7sp"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:padding="12dp"
                        android:textSize="16dp"
                        android:hint="info@homians.com"
                        android:textColorHint="#000000"
                        android:inputType="textEmailAddress"
                        android:lineSpacingExtra="-8sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="@font/homians_font"
                        android:layout_marginTop="9dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:fontFamily="@font/homians_font"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:alpha="0.8"
                        android:lineSpacingExtra="-7sp"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:padding="12dp"
                        android:textSize="16dp"
                        android:hint="password"
                        android:textColorHint="#000000"
                        android:inputType="textPassword"
                        android:lineSpacingExtra="-8sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="@font/homians_font"
                        android:layout_marginTop="9dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirm Password"
                        android:fontFamily="@font/homians_font"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:alpha="0.8"
                        android:lineSpacingExtra="-7sp"
                        android:textColor="#000000"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:padding="12dp"
                        android:textSize="16dp"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:lineSpacingExtra="-8sp"
                        android:textColorHint="#000000"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="@font/homians_font"
                        android:layout_marginTop="9dp"
                        />
                </LinearLayout>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continue"
                        android:textColor="@color/white"
                        android:fontFamily="@font/homians_font"
                        android:background="@drawable/rounded_green"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:onClick="signupbtn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/homians_font"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:fontFamily="@font/homians_font_eb"
                    android:textSize="26sp"
                    android:letterSpacing="0.02"
                    android:textColor="#000000"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white1"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    android:paddingHorizontal="28dp"
                    android:paddingVertical="16dp"
                    android:layout_gravity="center_vertical"
                    android:onClick="loginbtn"
                    />

            </LinearLayout>

        </LinearLayout>
            </LinearLayout>
</ScrollView>



</LinearLayout>